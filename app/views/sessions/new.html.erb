<html class='login-background'>
  <body class="login-body">
    <%= image_tag image_url('websitelogo.png'), class: 'login-logo' %>
      <%= form_tag login_path do %>
      <div class="login-form">
          <%= hidden_field_tag :username %><br>
          <%= text_field_tag :username, nil, {placeholder: "Username", class: 'field'} %><br>

          <%= hidden_field_tag :password %>
          <%= password_field_tag :password, nil, {placeholder: "Password", class: 'field'} %><br>

        <%= submit_tag "Login", class: 'field' %><br>
        </div>
      <% end %>

    <%= link_to "Sign Up!", new_user_path, class: 'side-button' %><br>
  </body>
</html>
