<html class='login-background'>
  <%= image_tag image_url('websitelogo.png'), class: 'login-logo' %>
    <%= form_tag login_path do %>
    <div class="login-form">
        <%= hidden_field_tag :username %><br>
        <%= text_field_tag :username, "Username", class: "field" %><br>

        <%= hidden_field_tag :password %>
        <%= text_field_tag :password, "Password", class: "field" %><br>

      <%= submit_tag "Login" %><br>
      Forgot Your Password?
      </div>
    <% end %>

  <%= link_to "Sign Up!", new_user_path, class: 'side-button' %><br>
</html>
