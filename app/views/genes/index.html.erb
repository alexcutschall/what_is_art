<html class="artwork-background">
  <body style="margin-bottom: 220px;">
    <%= render "partials/header" %>
      <% @genes.each do |gene| %>
        <% present(gene) do |gene| %>
          <div class="gene-information">
            <div class="artwork-information-headers">Name: </div><%= gene.name %>
            <div class="artwork-information-headers">Description: </div><%= gene.description %>
            <div class="artwork-information-headers">Artworks: </div><%= gene.artworks %>
            <div class="artwork-information-headers">Artists: </div></strong><%= gene.artists %>
          </div>
        <% end %>
      <% end %>
    <%= render "partials/footer" %>
  </body>
</html>
